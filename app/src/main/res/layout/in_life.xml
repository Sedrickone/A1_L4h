<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img_1"
    tools:context=".my_personal_skills">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dimen_width_196"
        android:layout_height="@dimen/dimen_height_196"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:src="@drawable/img_in_life"
            android:layout_width="@dimen/dimen_width_196"
            android:layout_height="@dimen/dimen_height_196"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="@dimen/padding_8dp"
        android:gravity="center"
        >

        <Button
            android:layout_margin="@dimen/padding_8dp"
            android:background="@drawable/frame_text"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:layout_height="wrap_content"
            android:id="@+id/btn_at_work"
            android:text="@string/btn_skill_life"
            android:fontFamily="casual"
            android:layout_weight="0.5"/>

        <Button
            android:layout_margin="@dimen/padding_8dp"
            android:background="@drawable/frame_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:fontFamily="casual"
            android:text="@string/btn_skill_work"
            android:id="@+id/btn_in_life"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="@dimen/padding_8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:background="@drawable/frame_text"
            android:padding="@dimen/padding_8dp"
            >

            <TextView
                android:layout_marginLeft="56dp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Умный"
                android:textSize="20sp"
                android:textColor="@color/color_white_text"
                android:id="@+id/txt_skills_in_life"
                />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
